<div class="row">
  <div class="col s12 m6">
    <ul class="collection with-header">
      <li class="collection-header"><h4>Survey Questions</h4></li>
      <!-- list survey questions for this survey -->
      <%@questions.each do |survey_question|%>
      <li class="collection-item"><%=survey_question.question%> <%= link_to "Edit",   "/surveys/#{@survey.id}/survey_questions/#{survey_question.id}/edit" %></li>
      <%end%>
    </ul>

    <div class="row">
      <div class="col s12 m6">
        <%= link_to('Create Question',
                    new_survey_survey_question_path(@survey.id),
                    class: "btn waves-effect waves-light") %>
      </div>
    </div>
  </div>
</div>
