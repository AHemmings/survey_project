<div class="row">
  <div class="col s12 m6">
    <h4>New Survey</h4>
    <%=form_for @survey do |f|%>
      <%=f.text_field :name, placeholder:"Enter the name"%>

      <%# clicking on the button will display the question options %>
      <button class="add_question">Add a question</button>
      <div class="questionContainer"></div>
      <br>
      <br>
      <%=f.submit%>
    <% end %>

  </div>
</div>
