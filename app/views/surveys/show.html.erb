<div>
    <h1>This is what your survey will look like</h1>
    <%= link_to 'Edit', edit_survey_path(@survey) %>
    <br>
    <%= link_to 'Add a new question', new_survey_survey_question_path(@survey) %>
    <br>
    <%= link_to "You have created #{pluralize(@survey.survey_questions.size,"question")}  for the #{@survey.name.capitalize} survey" , survey_survey_questions_path(@survey) %>
    <div class="surveyShow">
     <h2> <%=@survey.name%> </h2>
     <form class="surveyQuestion"> 
        <% @survey.survey_questions.order(:order).each do |question|%>

            <% if question.is_fixed %> 
                <h3><span><%=question.order%>.</span><%= question.question %> </h3>
                <br>
                <br>
                <select class="mySelect">
                    <% question.question_options.each do |option| %>
                        <option value=<%=option.option_text%> > <%= option.option_text%> </option> 
                    <% end %>
                    
                </select>    
            <% else %>

                <h3><span><%=question.order%>.</span><%= question.question %> </h3>
                <textarea placeholder="Enter your answer here"></textarea>

            <% end %>
        <% end %>
     </form>
   </div>
